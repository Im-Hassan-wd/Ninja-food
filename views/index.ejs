<%- include('./partials/head.ejs') %>

<body class="text-gray-600 font-nunito">

   <div class="grid md:grid-cols-3"><!-- content wrapper-->
     
   <%- include('./partials/nav.ejs') %>   

   <main class="px-16 py-6 bg-gray-100 md:col-span-2">
      <div class="flex justify-end">
        <a href="#" class="text-primary border-primary md:border-2 rounded-full py-1 px-2 uppercase text-xs font-bold cursor-pointer tracking-wider hover:bg-primary hover:text-white transition ease-out duration-500">Log in</a>
        <a href="#" class="text-primary border-primary md:border-2 rounded-full py-1 px-2 uppercase text-xs font-bold cursor-pointer tracking-wider hover:bg-primary hover:text-white ml-2 transition ease-out duration-500">Sign out</a>
      </div>
   

      <header>
         <h2 class="text-gray-700 text-6xl font-semibold">Recipes</h2>
         <h3 class="text-2xl font-semibold">For Ninjas</h3>
      </header>

      <div>
         <h4 class="flex justify-between items-center mt-12 pb-2 border-b border-gray-200">
            <span class="font-bold">Latest Recipes</span>
            <a href="/create">
               <svg class="w-5" xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd" />
               </svg>
            </a>
         </h4>

         <div class="mt-8 grid sm:grid-cols-3 gap-10">
            <!-- cards go here-->

            <% if(recipes){ %>
               <% recipes.forEach(recipe => { %>
                  <a href="/recipes/<%= recipe._id %>" class="hover:shadow-xl bg-white rounded overflow-hidden shadow-md relative">
                     <img src="./img/cheesecake.png" alt="cheesecake" class="w-full h-32 sm:h-48 object-cover">
                     <div class="m-4">
                        <span class="font-bold"><%= recipe.recipeName %></span>
                        <span class="block text-gray-500 text-sm">Recipe by <%= recipe.recipeBy %></span>
                     </div>
                     <div class="flex items-center bg-secondary-100 text-secondary text-xs uppercase font-bold rounded-full px-1 py-1 absolute top-0 mt-2 ml-2">
                        <svg class="w-4" xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                        <span>25 mins</span>
                     </div>
                  </a>
               <% }) %>
            <% } else { %>
               <div class="hover:shadow-xl bg-white rounded overflow-hidden shadow-md relative">
                  <img src="./img/noodles.jpg" alt="noodles" class="w-full h-32 sm:h-48 object-cover">
                  <div class="m-4">
                     <span class="font-bold">Veg Noodles</span>
                     <span class="block text-gray-500 text-sm">Recipe by Mario</span>
                  </div>
                  <div class="flex items-center bg-secondary-100 text-secondary text-xs uppercase font-bold rounded-full px-1 py-1 absolute top-0 mt-2 ml-2">
                     <svg class="w-4" xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                     <path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                     </svg>
                     <span>25 mins</span>
                  </div>
               </div>
               <div class="hover:shadow-xl bg-white rounded overflow-hidden shadow-md relative">
                  <img src="./img/curry.jpg" alt="curry" class="w-full h-32 sm:h-48 object-cover">
                  <div class="m-4">
                     <span class="font-bold">Tofu curry</span>
                     <span class="block text-gray-500 text-sm">Recipe by Mario</span>
                  </div>
                  <div class="flex items-center bg-secondary-100 text-secondary text-xs uppercase font-bold rounded-full px-1 py-1 absolute top-0 mt-2 ml-2">
                     <svg class="w-4" xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                     <path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                     </svg>
                     <span>25 mins</span>
                  </div>
               </div>
            <% } %> 
         </div>

         <h4 class="font-bold mt-12 pb-2 border-b border-gray-200">Most Popular</h4>

         <div class="mt-8 grid md:grid-cols-3 gap-10">
            <!-- cards go here-->
            <div class="hover:shadow-xl bg-white rounded overflow-hidden shadow-md relative">
               <img src="./img/cheesecake.png" alt="cheesecake" class="w-full h-32 sm:h-48 object-cover">
               <div class="m-4">
                  <span class="font-bold">Apple pie</span>
                  <span class="block text-gray-500 text-sm">Recipe by Warwick</span>
               </div>
               <div class="flex items-center bg-secondary-100 text-secondary text-xs uppercase font-bold rounded-full px-1 py-1 absolute top-0 mt-2 ml-2">
                  <svg class="w-4" xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  <span>25 mins</span>
               </div>
            </div>

            <div class="hover:shadow-xl bg-white rounded overflow-hidden shadow-md relative">
               <img src="./img/curry.jpg" alt="curry" class="w-full h-32 sm:h-48 object-cover">
               <div class="m-4">
                  <span class="font-bold">Tofu curry</span>
                  <span class="block text-gray-500 text-sm">Recipe by Mario</span>
               </div>
               <div class="flex items-center bg-secondary-100 text-secondary text-xs uppercase font-bold rounded-full px-1 py-1 absolute top-0 mt-2 ml-2">
                  <svg class="w-4" xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  <span>25 mins</span>
               </div>
            </div>
            
         </div>

         <div class="flex justify-center mt-5">
            <button class="bg-secondary-100 text-secondary-200 rounded-full py-2 px-3 uppercase text-xs font-bold cursor-pointer tracking-wider hover:shadow-inner transform hover:scale-125 hover:bg-opacity-50 transition ease-out duration-300">Load more</button>
         </div>
      </div>
   </main>
   </div> 

   <%- include('./partials/footer.ejs') %>

   <script>
      const burger = document.querySelector('#burger');
      const menu = document.querySelector('#menu');

      burger.addEventListener('click', () => {
         if(menu.classList.contains('hidden')) {
            menu.classList.remove('hidden');
         } else {
            menu.classList.add('hidden');
         }
      });
   </script>
</body>
</html>